<Page x:Class="DSA_DigitalSignature.Views.ManualDSAView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Background="#F5F5F5">
    <ScrollViewer>
        
        <StackPanel Margin="20" Width="400">

            <TextBlock Text="Tham số p" FontWeight="Bold"/>
            <TextBox x:Name="txtP"/>

            <TextBlock Text="Tham số q" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBox x:Name="txtQ"/>

            <TextBlock Text="Tham số g" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBox x:Name="txtG"/>

            <TextBlock Text="Khóa bí mật x" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBox x:Name="txtX"/>

            <TextBlock Text="Số ngẫu nhiên k" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBox x:Name="txtK"/>

            <TextBlock Text="Văn bản cần ký" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBox x:Name="txtMessage"
               Height="80"
               AcceptsReturn="True"
               TextWrapping="Wrap"/>

            <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                <Button Content="Tải tham số mẫu" Width="140" Click="LoadSample"/>
                <Button Content="Ký văn bản" Width="100" Margin="10,0,0,0" Click="Sign"/>
                <Button Content="Xác thực" Width="100" Margin="10,0,0,0" Click="Verify"/>
            </StackPanel>

            <TextBlock x:Name="txtResult"
                 Margin="0,15,0,0"
                 FontWeight="Bold"
                 Foreground="DarkBlue"/>
            <GroupBox Header="Quá trình ký DSA" Margin="0,20,0,0">
                <TextBox x:Name="txtSignSteps"
             Height="200"
             IsReadOnly="True"
             TextWrapping="Wrap"
             VerticalScrollBarVisibility="Auto"/>
            </GroupBox>
            <GroupBox Header="📘 Quá trình xác thực DSA" Margin="0,20,0,0">
                <TextBox x:Name="txtVerifySteps"
             Height="220"
             IsReadOnly="True"
             TextWrapping="Wrap"
             VerticalScrollBarVisibility="Auto"/>
            </GroupBox>

        </StackPanel>
        
    </ScrollViewer>
</Page>