<Application x:Class="DSA_Simulator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DSA_Simulator"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- ===== TEXTBOX ===== -->
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#B2BEC3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="0,3,0,3"/>
        </Style>

        <!-- ===== BUTTON ===== -->
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Background" Value="AliceBlue"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#0984E3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- ===== PRIMARY BUTTON ===== -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2C7BE5"/>
            <Setter Property="BorderBrush" Value="#2C7BE5"/>
        </Style>

        <!-- ===== SUCCESS BUTTON ===== -->
        <Style x:Key="SuccessButton" TargetType="Button">
            <Setter Property="Background" Value="#00B894"/>
            <Setter Property="BorderBrush" Value="#00B894"/>
        </Style>

        <!-- ===== DANGER BUTTON ===== -->
        <Style x:Key="DangerButton" TargetType="Button">
            <Setter Property="Background" Value="#D63031"/>
            <Setter Property="BorderBrush" Value="#D63031"/>
        </Style>

        <!-- ===== GROUPBOX ===== -->
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="0,8,0,8"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

    </Application.Resources>
</Application>